# ESPHome Secrets Configuration Example
# Copy this file to secrets.yaml and fill in your actual values
# secrets.yaml should NOT be committed to version control

# WiFi Network Configuration
wifi_ssid: "your_wifi_name"
wifi_password: "your_wifi_password"

# Fallback WiFi Network (IoT network)
iot_wifi: "your_fallback_wifi_name"
iot_password: "your_fallback_wifi_password"

# Network Domain
esp_domain: ".local"

# ESPHome OTA Update Password
ota_password: "your_ota_password"

# Home Assistant API Encryption Key
# Generate with: openssl rand -base64 32
api_encryption_key: "your_32_character_encryption_key"
